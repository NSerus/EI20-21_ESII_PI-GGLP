@model EI20_21_ESII_PI_GGLP.Models.Horario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: aliceblue;
    }
</style>

<br />
<br />
<br />
<br />
<br />

<h2 class="text-center mt-0">Criar Novo Horário</h2>
<hr />

<br />


<section class="container" style="width:600px">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="PontoDeInteresseID" class="control-label"></label>
            <select asp-for="PontoDeInteresseID" class="form-control" asp-items="ViewBag.PontoDeInteresseID"></select>

            <br />
            <br />

            <label asp-for="DiaID" class="control-label"></label>
            <select asp-for="DiaID" class="form-control" asp-items="ViewBag.DiaID"></select>

            <br />
            <br />

            <label asp-for="HInicio" class="control-label"></label>
            <input asp-for="HInicio" class="form-control" />
            <span asp-validation-for="HInicio" class="text-danger"></span>

            <br />
            <br />

            <label asp-for="HFim" class="control-label"></label>
            <input asp-for="HFim" class="form-control" />
            <span asp-validation-for="HFim" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Criar Horário" class="btn btn-primary" />
        </div>
    </form>

    <br />
    <br />
    <br />

    @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
